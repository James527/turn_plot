<%= form_for([@correspondent, @correspondent.letters.build]) do |f| %>

  <div class="field">
    <%= f.label :send_to %><br>
    <%= f.text_field :send_to %>
  </div>
  <div class="field">
    <%= f.label :header %><br>
    <%= f.text_field :header %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
