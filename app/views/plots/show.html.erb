<div class="plot-wrapper">
  <div class="plot" id="editable">
    <%= @plot.content %>
  </div>
</div>
<div class="plot-info">
  <p><%= @plot.title %> | <%= link_to 'Edit', edit_plot_path(@plot) %></p>
  <p><a href='/user/<%= @plot.user.id %>'><%= @plot.user.username %></a></p>
  <p>Coords: <%= @plot.user.x %>, <%= @plot.user.y %></p>
  <p>Active: <%= @plot.active_plot %></p>
</div>
<span class='hidden' id='x'><%= @plot.user.x %></span>
<span class='hidden' id='y'><%= @plot.user.y %></span>
<script type="text/javascript">
  aloha(document.querySelector('#editable'));
</script>