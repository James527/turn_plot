<!DOCTYPE html>
<html>
	<head>
		<title>TurnPlot</title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<header>

			<p class="notice"><%= notice %></p>
			<p class="alert"><%= alert %></p>

			<%= link_to 'Home', root_path, method: :get %> | 
			<%= link_to 'My Account', account_path, method: :get %> | 
			<%= link_to 'Log In', new_user_session_path, method: :get %> | 
			<%= link_to 'Register', new_user_registration_path, method: :get %> | 
			<%= link_to 'Log Out', destroy_user_session_path, method: :delete %> | 
			<%= link_to 'New Correspondent', new_correspondent_path, method: :get %> | 


			<br>
		</header>

		<%= yield %>

	</body>
</html>
